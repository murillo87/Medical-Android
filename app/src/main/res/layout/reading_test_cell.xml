<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reading_test_cell_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:layout_margin="0dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/reading_test_left_radio"
                android:contentDescription="@string/reading_test_left_radio"
                android:layout_width="@dimen/defaultImageButtonWidth"
                android:layout_height="@dimen/defaultImageButtonHeight"
                android:layout_marginStart="@dimen/defaultMarginLeft"
                android:layout_marginTop="@dimen/defaultMarginTop"
                android:layout_marginBottom="@dimen/defaultMarginBottom"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:background="@null"
                android:tint="@color/magenta"
                android:src="@drawable/radio_toggle_button"
                android:scaleType="fitStart" />

            <Button
                android:id="@+id/reading_test_left_button"
                android:layout_width="@dimen/defaultTapAreaWidth"
                android:layout_height="@dimen/defaultTapAreaHeight"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:background="@color/transparent"/>

            <TextView
                android:id="@+id/reading_test_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/defaultGap"
                android:layout_marginTop="@dimen/defaultMarginTop"
                android:layout_marginEnd="@dimen/defaultGap"
                android:layout_marginBottom="@dimen/defaultMarginBottom"
                android:layout_centerVertical="true"
                android:maxLines="4"
                android:textAlignment="textStart"
                android:layout_toEndOf="@+id/reading_test_left_radio"
                android:layout_toStartOf="@id/reading_test_right_radio"
                android:textColor="@color/darkMain"
                android:theme="@style/fontReadingTestLittle"
                tools:textAppearance="@style/fontReadingTestLittle"
                tools:text="@string/readingTestContentCellLittle" />

            <ImageView
                android:id="@+id/reading_test_right_radio"
                android:contentDescription="@string/reading_test_right_radio"
                android:layout_width="@dimen/defaultImageButtonWidth"
                android:layout_height="@dimen/defaultImageButtonHeight"
                android:layout_marginEnd="@dimen/defaultMarginRight"
                android:layout_marginTop="@dimen/defaultMarginTop"
                android:layout_marginBottom="@dimen/defaultMarginBottom"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"
                android:tint="@color/lightMain"
                android:src="@drawable/radio_toggle_button"
                tools:scaleType="fitEnd" />

            <Button
                android:id="@+id/reading_test_right_button"
                android:layout_width="@dimen/defaultTapAreaWidth"
                android:layout_height="@dimen/defaultTapAreaHeight"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="@color/transparent"/>

        </RelativeLayout>

        <View
            android:id="@+id/reading_test_cell_separator"
            android:background="@color/darkMain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/defaultSeparatorHeight"
            android:layout_marginStart="@dimen/defaultMarginLeft"
            android:layout_marginEnd="@dimen/defaultMarginRight" />

    </LinearLayout>

</android.support.v7.widget.CardView>
