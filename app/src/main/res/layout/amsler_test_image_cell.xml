<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/image_cell_view"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    app:cardCornerRadius="0dp"
    android:layout_margin="0dp"
    app:cardBackgroundColor="@color/white">

    <ImageView
        android:id="@+id/grid_image"
        android:contentDescription="@string/amsler_test_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/defaultMarginLeft"
        android:layout_marginEnd="@dimen/defaultMarginRight"
        android:scaleType="center"
        android:layout_gravity="center"
        android:src="@drawable/amslergitter" />

</android.support.v7.widget.CardView>