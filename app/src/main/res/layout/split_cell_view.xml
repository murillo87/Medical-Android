<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/split_cell_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:layout_margin="0dp"
    app:cardBackgroundColor="@color/darkMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/split_left_button"
                android:layout_width="@dimen/defaultTapAreaWidth"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/defaultMarginLeft"
                android:paddingEnd="@dimen/defaultGap"
                android:paddingTop="@dimen/defaultMarginTop"
                android:paddingBottom="@dimen/defaultMarginBottom"
                android:layout_alignParentStart="true"
                android:background="@color/transparent"
                android:textColor="@color/magenta"
                android:textAllCaps="false"
                android:gravity="start"
                android:theme="@style/fontHeadLineDefault"
                tools:textAppearance="@style/fontHeadLineDefault"
                tools:text="Left" />

            <Button
                android:id="@+id/split_right_button"
                android:layout_width="@dimen/defaultTapAreaWidth"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/defaultGap"
                android:paddingEnd="@dimen/defaultMarginRight"
                android:paddingTop="@dimen/defaultMarginTop"
                android:paddingBottom="@dimen/defaultMarginRight"
                android:layout_alignParentEnd="true"
                android:background="@color/transparent"
                android:textColor="@color/lightMain"
                android:textAllCaps="false"
                android:gravity="end"
                android:theme="@style/fontHeadLineDefault"
                tools:textAppearance="@style/fontHeadLineDefault"
                tools:text="Right" />

        </RelativeLayout>

        <View
            android:id="@+id/split_cell_separator"
            android:background="@color/lightMain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/defaultSeparatorHeight"
            android:layout_marginStart="@dimen/defaultMarginLeft"
            android:layout_marginEnd="@dimen/defaultMarginRight" />

    </LinearLayout>

</android.support.v7.widget.CardView>
