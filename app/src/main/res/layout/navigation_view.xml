<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_content_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:layout_margin="0dp"
    app:cardBackgroundColor="@color/darkMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/nav_left_button"
                android:contentDescription="@string/nav_back_button"
                android:layout_width="@dimen/defaultTapAreaWidth"
                android:layout_height="@dimen/defaultTapAreaHeight"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="22dp"
                android:paddingEnd="8dp"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/back_arrow"
                android:scaleType="fitStart" />

            <TextView
                android:id="@+id/nav_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="54dp"
                android:layout_marginStart="54dp"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:theme="@style/fontTitleDefault"
                tools:textAppearance="@style/fontTitleDefault"
                tools:text="Navigation" />

            <ImageButton
                android:id="@+id/nav_right_button"
                android:contentDescription="@string/nav_speak_button"
                android:layout_width="@dimen/defaultTapAreaWidth"
                android:layout_height="@dimen/defaultTapAreaHeight"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingEnd="22dp"
                android:paddingStart="8dp"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/speaker"
                tools:scaleType="fitEnd" />

        </RelativeLayout>

        <View
            android:id="@+id/nav_cell_separator"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/defaultSeparatorHeight"
            android:layout_marginEnd="@dimen/defaultMarginLeft"
            android:layout_marginStart="@dimen/defaultMarginRight" />

    </LinearLayout>

</android.support.v7.widget.CardView>
